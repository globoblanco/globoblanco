pipeline {

  // Define agent used
  agent {
    docker { image 'liquibase/liquibase:4.4.2' }
  }

  // Define environment variables needed for the pipeline
  environment {
    POSTGRES_CREDENTIALS = credentials('POSTGRES_CREDENTIALS')
  }

  // Define pipeline stages
  stages {

    stage('Verification') {
      steps {
        //sh 'printenv'
        sh 'liquibase --version'
      }
    }

    stage('Information') {
      steps {
        echo "Running ${env.BUILD_ID} on ${env.JENKINS_URL}"
	echo "Build information at: ${env.RUN_DISPLAY_URL}"
      }
    }

    stage('Validation') {
      steps {
        echo 'Validating Jenkins ChangeLog file...'
	sh 'liquibase --logLevel=FINE validate'
      }
    }

    stage('Qualification') {
      steps {
        echo 'Executing Quality Checks...'
	//sh 'liquibase checks run --username=$POSTGRES_CREDENTIALS_USR --password=$POSTGRES_CREDENTIAL__PSW'
      }
    }

    stage('Pending') {
      steps {
        echo 'Checking for Pending changes...'
	// sh 'liquibase status --username=$POSTGRES_CREDENTIALS_USR --password=$POSTGRES_CREDENTIAL__PSW'
      }
    }

    stage('Bookmarking') {
      steps {
        echo 'Applying a tag to bookmark rollback point...'
      }
    }

    stage('Apply') {
      steps {
        echo 'Applying changes to Database...'
      }
    }
  }

  post {
    failure {
      sh 'echo "Build failed :-("'
    }
  }
}
